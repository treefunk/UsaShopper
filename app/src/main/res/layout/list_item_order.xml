
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_50"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    android:minHeight="150dp">

    <TextView
        android:id="@+id/tv_order_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_order_num"


        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:text="Fugiat laborum Ull"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:fontFamily="@font/gilroy_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black_900"/>

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_order_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_1"

        android:maxLines="1"
        android:text="ORDFY-11588822036"
        android:textSize="12sp"
        android:textColor="@color/grey_200"
        />

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"

        app:layout_constraintTop_toBottomOf="@id/tv_order_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_order_request_date"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/grey_200"
        />

    <TextView
        android:id="@+id/tv_order_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintLeft_toLeftOf="@id/line_2"
        app:layout_constraintBottom_toTopOf="@id/tv_order_shopper_name"

        android:layout_marginTop="8dp"

        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:text="Requested on 07 May 2020"
        android:textColor="@color/grey_200"
        android:textSize="9sp"
        />

    <TextView
        android:id="@+id/tv_order_shopper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_order_request_date"
        app:layout_constraintLeft_toLeftOf="@id/line_2"
        app:layout_constraintBottom_toTopOf="@id/line_2"

        android:layout_marginBottom="10dp"



        android:layout_gravity="center_vertical"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:text="by Diane Ocampo (012321412)"
        android:textColor="@color/grey_200"
        android:textSize="9sp"
        />

    <View
        android:id="@+id/line_2"
        android:layout_width="0dp"
        android:layout_height="0.2dp"

        app:layout_constraintTop_toBottomOf="@id/tv_order_shopper_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_order_quantity"
        app:layout_constraintRight_toRightOf="parent"


        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/grey_200"
        />

    <TextView
        android:id="@+id/tv_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/line_2"
        app:layout_constraintTop_toBottomOf="@id/line_2"
        app:layout_constraintRight_toLeftOf="@id/btn_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"


        android:text="3 Items, Total:"
        android:textColor="@color/black_800"
        android:textSize="13sp"
        android:fontFamily="@font/gilroy_light"

        />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@id/tv_order_quantity"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_order_quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_view"
        app:layout_constraintHorizontal_bias="0"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"

        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:text="$100"
        android:textColor="@color/red_600"
        android:fontFamily="@font/roboto_bold"
        />







    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_1"

        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="#1A1F76"
        android:text="Waiting"
        android:fontFamily="@font/roboto_bold"

        />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/line_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="View Item"
        android:textSize="10sp"
        android:textColor="@color/black_800"
        android:fontFamily="@font/roboto_regular"

        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/black_800"
        app:strokeWidth="1.5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>